{
  "name": "weboftalent/portlets",
  "description": "Module to quickly render portlets of data from a simple template call",
  "type": "silverstripe-module",
  "keywords": [
    "silverstripe",
    "portlets",
    "templates",
    "weboftalent"
  ],
  "authors": [
    {
      "name": "Gordon Anderson",
      "email": "gordon@weboftalent.asia"
    }
  ],
	"require": {
		"php" : "~5.6|~7.0",
		"silverstripe/framework": "^4.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^5.7",
		"squizlabs/php_codesniffer": "^2.3"
	},
	"autoload": {
		"psr-4": {
			"WebOfTalent\\Portlets\\": "src/",
			"WebOfTalent\\Portlets\\Tests\\": "tests/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
  "license": "BSD-3-Clause"
}
